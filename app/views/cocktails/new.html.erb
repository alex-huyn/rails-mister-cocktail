<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Add a new cocktail!</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.submit "Add", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

