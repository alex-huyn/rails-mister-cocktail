<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Add an ingredient</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit "Add", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


